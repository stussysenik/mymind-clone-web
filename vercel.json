{
        "buildCommand": "cd apps/web && bun run build",
        "installCommand": "cd apps/web && bun install",
        "outputDirectory": "apps/web/.next",
        "framework": "nextjs",
        "cleanUrls": true,
        "trailingSlash": false,
        "regions": [
                "iad1"
        ],
        "functions": {
                "app/**/*.js": {
                        "memory": 1024,
                        "maxDuration": 30
                }
        },
        "headers": [
                {
                        "source": "/(.*)",
                        "headers": [
                                {
                                        "key": "X-Content-Type-Options",
                                        "value": "nosniff"
                                },
                                {
                                        "key": "X-Frame-Options",
                                        "value": "DENY"
                                },
                                {
                                        "key": "X-XSS-Protection",
                                        "value": "1; mode=block"
                                }
                        ]
                }
        ]
}