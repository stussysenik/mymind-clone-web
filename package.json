{
        "name": "mymind-clone",
        "version": "1.0.0",
        "private": true,
        "description": "A privacy-first, AI-powered visual knowledge manager",
        "workspaces": [
                "apps/*"
        ],
        "scripts": {
                "dev": "cd apps/web && bun run dev",
                "build": "cd apps/web && bun run build",
                "start": "cd apps/web && bun run start",
                "lint": "cd apps/web && bun run lint",
                "test": "cd apps/web && bun run test",
                "check-secrets": "bun scripts/check-secrets.js",
                "prepare": "husky"
        },
        "engines": {
                "node": "20.x"
        },
        "repository": {
                "type": "git",
                "url": "https://github.com/yourusername/mymind-clone.git"
        },
        "keywords": [
                "knowledge-management",
                "ai",
                "nextjs",
                "supabase",
                "mymind-clone"
        ],
        "author": "Senik & Antigravity",
        "license": "MIT",
        "devDependencies": {
                "@fission-ai/openspec": "^0.19.0",
                "husky": "^9.0.0"
        },
        "optionalDependencies": {
                "@tailwindcss/oxide-darwin-arm64": "^4.1.18",
                "lightningcss-darwin-arm64": "^1.30.2"
        }
}
